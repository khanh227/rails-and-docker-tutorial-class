= table_tag do 
  %tr
    %th Email
    %th Role
    %th Active
    %th
  - @users.each do |user|
    %tr
      %td= user.email
      %td= user.role_user
      %td= status_tag(user.active)
      %td.text-right
        - if can? :update, User
          = link_to 'Edit', edit_user_path(user), class: 'btn btn-primary'
        - if can? :read, User
          = link_to 'Show', user_path(user), class: 'btn btn-info'
